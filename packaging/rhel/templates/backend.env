# CISO Assistant Backend Configuration
# This file is installed to /etc/ciso-assistant/backend.env

# Django settings
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=__GENERATE_ON_INSTALL__
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite)
DB_ENGINE=sqlite3
SQLITE_FILE=/opt/ciso-assistant/backend/db/ciso-assistant.sqlite3

# Application URL (for frontend callbacks)
CISO_ASSISTANT_URL=http://localhost:3000

# Email settings (configure as needed)
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
DEFAULT_FROM_EMAIL=noreply@localhost

# Media and static files
MEDIA_ROOT=/opt/ciso-assistant/backend/media
STATIC_ROOT=/opt/ciso-assistant/backend/static

# Security settings
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://localhost:8443
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:8443

# Logging
LOG_LEVEL=INFO
