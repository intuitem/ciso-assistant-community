# Production Environment Configuration for CISO Assistant
# Copy this file to .env and update with your production values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://ciso_user:your_secure_postgres_password_here@postgres:5432/ciso_assistant

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# Django Configuration
SECRET_KEY=your-very-secure-django-secret-key-here-minimum-50-characters
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Application URLs
CISO_ASSISTANT_URL=https://your-domain.com
API_BASE_URL=https://your-domain.com/api

# Email Configuration (optional)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@your-domain.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# File Storage (optional - for cloud storage)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cdn-domain.com

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_ENABLED=True

# Authentication (optional)
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=your-google-oauth-key
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=your-google-oauth-secret
SOCIAL_AUTH_MICROSOFT_OAUTH2_KEY=your-microsoft-oauth-key
SOCIAL_AUTH_MICROSOFT_OAUTH2_SECRET=your-microsoft-oauth-secret

# Performance Settings
GUNICORN_WORKERS=4
GUNICORN_WORKER_CONNECTIONS=1000
CACHE_TIMEOUT=3600

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password
PROMETHEUS_RETENTION=30d
